pipeline {
    agent any
    
    environment{
        SCANNER_HOME= tool "sonar"
    }

    stages {
        stage('Clean Workspace ') {
            steps {
                echo "Cleaning Workspace:"
                sh "eksctl delete cluster --name three-tier-cluster --region us-west-2"
                cleanWs()
            }
        }
        
        stage('Provision EKS Cluster') {
            steps {
                echo "Creating EKS Cluster:"
                sh "eksctl create cluster --name three-tier-cluster --region us-west-2 --node-type t2.medium --nodes-min 2 --nodes-max 2"
                echo "Updating kubeconfig:"
                sh "aws eks update-kubeconfig --region us-west-2 --name three-tier-cluster"
                echo "EKS nodes:"
                sh "kubectl get nodes"
            }
        }
        
        stage("Code Checkout"){
            steps{
                git url: "https://github.com/Nehabisen21/TWSThreeTierAppChallenge.git", branch: "main"
            }
        }
        
        stage("Sonarqube Analysis"){
            steps{
                withSonarQubeEnv("sonar"){
                 sh '''$SCANNER_HOME/bin/sonar-scanner -Dsonar.projectKey=threetierapp -Dsonar.projectName=threetierapp'''
                }
            }
        }
    }
}
